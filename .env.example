# AutoSocioly Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
DEBUG=false
HOST=0.0.0.0
PORT=8000
BASE_URL=https://your-domain.com
LOG_LEVEL=INFO

# GetLate API Configuration
GETLATE_API_KEY=your-getlate-api-key-here
GETLATE_BASE_URL=https://getlate.dev/api/v1

# Google Gemini AI Configuration
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL_ID=gemini-2.0-flash-001
GEMINI_IMAGE_MODEL_ID=gemini-2.5-flash-image-preview

# Additional AI Configuration (Optional)
LATE_API_KEY=your-late-api-key-here
IMAGE_MODEL_ID=your-preferred-image-model
TEXT_MODEL_ID=your-preferred-text-model

# File Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Redis Configuration (Docker)
REDIS_URL=redis://redis:6379/0

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Ngrok Configuration (Optional)
NGROK_AUTHTOKEN=your-ngrok-authtoken-here
USE_NGROK=false

# Content Generation Settings
DEFAULT_TONE=engaging
DEFAULT_CAPTION_LENGTH=medium
DEFAULT_HASHTAG_COUNT=10
MAX_HASHTAG_COUNT=30
MIN_HASHTAG_COUNT=1

# Image Generation Settings
IMAGE_GENERATION_TIMEOUT=60
IMAGE_QUALITY=high
MAX_IMAGE_SIZE=2048

# Social Media Platforms
SUPPORTED_PLATFORMS=facebook,instagram,linkedin,x,twitter,reddit,pinterest,tiktok,youtube